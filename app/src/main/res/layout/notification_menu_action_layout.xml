<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/notifMenuBtn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notifIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notifications_white"
        app:tint="@color/whiteAlpha70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minWidth="56dip"
        android:padding="8dp"
        />


    <TextView
        android:id="@+id/notificationCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:minWidth="18dp"
        android:minHeight="18dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/notifIcon"
        app:layout_constraintBottom_toBottomOf="@id/notifIcon"
        android:textSize="12sp"
        android:padding="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:background="@drawable/notification_count_bg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>